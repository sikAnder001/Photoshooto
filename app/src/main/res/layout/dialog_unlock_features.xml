<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bg_layout_corner_rounded_consult">

        <LinearLayout
            android:id="@+id/tvUnlockFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/black_text_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Unlock Features"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductName"
                style="@style/black_text_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/unlock_features"
                android:textColor="@color/grey1"
                android:textSize="12dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_231sdp"
            android:layout_alignEnd="@id/tvUnlockFeature"
            android:layout_marginEnd="-10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gift" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/dp100"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_11sdp"
                android:text="@string/cancel"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/btnUnlockFeatures"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/bluebutton_ripple"
                android:backgroundTint="@color/red_color"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_9sdp"
                android:text="Unlock Features"
                android:textAppearance="@style/sp18_white_txt"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </RelativeLayout>
</layout>