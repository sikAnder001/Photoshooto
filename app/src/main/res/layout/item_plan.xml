<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp10"
    app:cardElevation="@dimen/dp10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp5">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginTop="@dimen/dp6"
            android:gravity="center_horizontal"
            android:src="@drawable/file_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reviewer_name"
            app:layout_constraintVertical_bias="0.02" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/linearLayoutCompat6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp16"
            android:gravity="center"
            android:src="@drawable/ic_edit_blue_pencil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:text="Studio Photography"
            android:textAppearance="@style/sp18_bold_blue_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/user_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="â‚¹ 15000/Per Day"
            android:textAppearance="@style/sp16_orange_txt"
            android:textSize="@dimen/sp12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/reviewer_name"
            app:layout_constraintTop_toTopOf="@+id/reviewer_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/bookeddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session 3-4 hrs"
            android:textAppearance="@style/sp14_thickbluew_style"
            app:layout_constraintStart_toStartOf="@+id/review_date"
            app:layout_constraintTop_toBottomOf="@+id/review_date"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
