<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_bg"
            android:backgroundTint="@color/unread_notification_bg"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:text="Filter"
            android:textColor="@color/blue_clr"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/filter_tune_icon" />


        <TextView
            android:id="@+id/tvBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/border_not_selected"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="Budget"
            android:textColor="@color/blue_clr"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down_black_24dp" />


        <TextView
            android:id="@+id/tvEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/border_not_selected"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="Event"
            android:textColor="@color/blue_clr"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down_black_24dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/border_not_selected"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="Location"
            android:textColor="@color/blue_clr"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down_black_24dp" />

        <TextView
            android:id="@+id/tvTypeOfPhotography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/border_not_selected"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="Type of Photography"
            android:textColor="@color/blue_clr"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down_black_24dp" />

        <TextView
            android:id="@+id/tvSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/border_not_selected"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="Sort"
            android:textColor="@color/blue_clr"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down_black_24dp" />


    </LinearLayout>


</HorizontalScrollView>