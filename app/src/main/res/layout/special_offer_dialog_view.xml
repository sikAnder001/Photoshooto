<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardCornerRadius="@dimen/_12sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_corner_rounded_consult"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/special_offer_main_img" />

            <ImageView
                android:id="@+id/imgSurprise"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/surprise_icon"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="153dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="-40dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/special_first_sell_offer_text_img"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="210dp" />

                <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"

                    android:src="@drawable/offer_holder_icon" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvUpgradeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/want_to_upgrade_your_photography_business"
                android:textAppearance="@style/sp16_blue_style"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />


            <TextView
                android:id="@+id/tvUpgradeSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/exclusive_pre_sale_offer_for_all_photographers"
                android:textAppearance="@style/sp14_blue_style"
                android:textColor="@color/grey3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUpgradeTitle"
                app:layout_constraintVertical_bias="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPriceTag"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:adjustViewBounds="true"

                    android:src="@drawable/special_offer_price_tag_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvUpgradeSubTitle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="(inclusive of all taxes)"
                    android:textSize="12dp" />

            </LinearLayout>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:src="@drawable/icon_plus" />

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/spcial_offer_redeem_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/round_btn_bg"
                    android:backgroundTint="@color/blue_clr"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:text="Redeem"
                    android:textAppearance="@style/sp12_blue_style"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:tint="@color/blue_clr" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvOrderNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_round_bg_orange"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Order Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgPriceTag"
                tools:layout_editor_absoluteX="13dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>