<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Growero" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_clr</item>
        <item name="colorPrimaryVariant">@color/trans_new</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed">false</item>
        <!-- Customize your theme here. -->
    </style>

    <bool name="lightNavEnabled">true</bool>

    <style name="Theme.BottomNavWithSideNav" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton
        </item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button
        </item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="TransparentTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>


    <!--    <style name="Theme.BottomNavWithSideNav.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--        <item name="android:windowContentOverlay">@null</item>-->
    <!--        <item name="android:windowBackground">@drawable/splash_logo</item>-->
    <!--        <item name="colorPrimaryDark">@color/blue_clr</item>-->
    <!--    </style>-->


    <style name="Theme.Keify.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Keify.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">

    </style>

    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="App.Theme.ToolbarTitleUppercase" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>

    <style name="Theme.BottomNavWithSideNav.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/color_background_card</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyTextAppearance.MaterialComponents.Body2
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_text_logout</item>
    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body2" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/color_text_logout</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_dark_purpule</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_dark_purpule</item>
    </style>

    <style name="Theme.Growero.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_clr</item>
        <item name="colorPrimaryVariant">@color/trans_new</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Growero.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_clr</item>
        <item name="colorPrimaryVariant">@color/trans_new</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>/>
    </style>

    <style name="Theme.Growero.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!--VS Start-->
    <style name="BottomSheetDialogEvent" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Shp" />

    <style name="Shp.ScrollNumberPickerStyle">
        <item name="npv_ItemPaddingVertical">@dimen/_10sdp</item>
        <item name="npv_ShownCount">3</item>
        <item name="npv_ShowDivider">false</item>
        <item name="npv_WrapSelectorWheel">true</item>
        <item name="npv_ItemPaddingHorizontal">2dp</item>
        <item name="npv_TextSizeNormal">@dimen/shp_text_size_normal_item</item>
        <item name="npv_TextSizeSelected">@dimen/shp_text_size_selected_item</item>
        <item name="npv_TextColorNormal">@color/text_80000000</item>
        <item name="npv_TextColorSelected">@color/black</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">56dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <!--VS END-->


    <style name="PickerTheme">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey21</item>
        <item name="colorControlActivated">@color/text_F0481B</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>


    </style>
</resources>